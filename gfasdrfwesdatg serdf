import java.io.*;
import java.net.*;
import java.util.*;

public class SocketHandler {
    boolean scanFinished = false;
    ServerSocket socket;
    
    public SocketHandler()
    {
        try
        {
            socket = new ServerSocket(1337);
        }
        catch(IOException e) {}
    }

    public void open() throws Exception
    {
        try {
            while (true) {
                Socket sock = socket.accept();
                try {
                    PrintWriter out = 
                        new PrintWriter(sock.getOutputStream(), true);
                    out.println(1);
                    
                } finally {
                    socket.close();
                }
            }
        }
        finally {
            socket.close();
        }
    }
    
    private void lock() throws Exception 
    {
       try {
            while (true) {
                Socket sock = socket.accept();
                try {
                    PrintWriter out = 
                        new PrintWriter(sock.getOutputStream(), true);
                    out.println(0);
                    
                } finally {
                    socket.close();
                }
            }
        }
        finally {
            socket.close();
        }
    }
    
    public void alarm() throws Exception
    {
         try {
            while (true) {
                Socket sock = socket.accept();
                try {
                    PrintWriter out = 
                        new PrintWriter(sock.getOutputStream(), true);
                    out.println(2);
                    
                } finally {
                    socket.close();
                }
            }
        }
        finally {
            socket.close();
        }
    }
}
